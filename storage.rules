rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for avatars for easier display
    match /user_uploads/avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload other media, but only they can read/write it.
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
